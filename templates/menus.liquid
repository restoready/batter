<section class="menus">
  <div class="wrapper">
    {% for menu in menus %}
      <header class="section__header">
        <h2 class="section__title section_title--allMenus">
          <a class="all-menus__menu-link" href="{{ menu.url }}">{{ menu.name }}</a>
        </h2>
      </header>
      <div class="section__main">
        <ol class="menus__children">
          {% for child in menu.children %}
            <li class="menus__child">
              <a class="menus__child-link" href="{{ menu.url }}#menu-{{child.id}}">
                {% if child.main_image? %}
                  <div class="menus-thumbnail menus-thumbnail--all">
                    {{ child.main_image | custom_image_url: "200x200#" | image_tag }}
                  </div>
                {% else %}
                  {{ 'fallback-image.gif' | asset_url | image_tag: 'alt:menus', 'class:anchor-image', 'width:200' }}
                {% endif %}
                {{ child.name }}
              </a>
            </li>
          {% endfor %}
        </ol>
      </div>
      <div class="clearer"></div>
      <hr class="menus__separator">
      <div class="clearer"></div>
    {% endfor %}
  </div>
</section>
