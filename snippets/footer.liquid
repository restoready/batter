<div class="wrapper">
  <div class="back-to-top">
    <a class="back-to-top__link" href="#top">
      <i class="icon-arrow-up"></i> <span class="back-to-top__label">{{ "Haut de la page" | t }}</span>
    </a>
  </div>

  <div class="grid">
    {% if theme_settings.footer_display_newsletter %}
      <div class="grid-item large--one-third">
        <div class="footer__subscribe footer-section">
          {% newsletter_subscribe_form %}
            <fieldset class="field-group">
              <div class="input">
                <label class="subscribe__label" for="subscriberEmail">{{ "Abonnement Newsletter :" | t }}</label>
                <input id="subscriberEmail" name="subscriber[email]" type="email" required>
              </div>
              <div class="submit">
                <button class="button button-right" type="submit">
                  <i class="icon-check"></i> {{ "S'abonner" | t }}
                </button>
              </div>
            </fieldset>
          {% endnewsletter_subscribe_form %}
        </div>
      </div>
    {% endif %}

    <div class="grid-item large--one-third">
      <div class="footer-adress footer-section">
      <h4 class="restaurant-title">{{ restaurant.name }}</h4>
      {% if restaurant.street_address? %}
        <span itemprop="streetAddress">{{ restaurant.street_address }}</span>
        <br />
      {% endif %}
      {% if restaurant.zip_code? %}
        <span itemprop="postalCode">{{ restaurant.zip_code }}</span>
      {% endif %}
      {% if restaurant.city? %}
        <span itemprop="addressLocality">{{ restaurant.city }}</span>
        <br />
      {% endif %}
      {% if restaurant.phone? %}
        <a href="tel:#{{restaurant.phone_uri}}">
          <span class='telephone' itemprop="telephone">{{ restaurant.phone }}</span>
        </a>
        <br />
      {% endif %}
      {% if restaurant.email %}
        <a href="mailto:#{{restaurant.email}}">
          <span class='email' itemprop="email">{{ restaurant.email }}</span>
        </a>
        <br />
      {% endif %}
      <a href="{{ restaurant.terms_of_use_url }}">
        <span class='terms-of-use' itemprop="terms-of-use">{{ "Mentions lÃ©gales" | t }}</span>
      </a>
      </div>
    </div>

    <div class="grid-item large--one-third">
      <div class="footer__social footer-section">
      <h4 class="network-title">Suivez-nous</h4>
        <ul class="social__items">
          {% if restaurant.facebook_url? %}
            <li class="social__item">
              <a class="social__link" href="{{restaurant.facebook_url}}">
                <span class="social__label">{{ "Facebook" | t }}</span>
              </a>
            </li>
          {% endif %}
          {% if restaurant.twitter_url? %}
            <li class="social__item">
              <a class="social__link" href="{{restaurant.twitter_url}}">
                <span class="social__label">{{ "Twitter" | t }}</span>
              </a>
            </li>
          {% endif %}
          {% if restaurant.tripadvisor_url? %}
            <li class="social__item">
              <a class="social__link" href="{{restaurant.tripadvisor_url}}">
                <span class="social__label">{{ "TripAdvisor" | t }}</span>
              </a>
            </li>
          {% endif %}
        </ul>
      </div>
    </div>
  </div>
</div>
